<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=SGD"></script>
</head>
<body>
  <%- include('partials/navbar') %>
  <%- include('partials/flash') %>

  <div class="container my-5">
    <h2>Checkout</h2>

    <% if (!cart || cart.length === 0) { %>
      <div class="alert alert-warning">Your cart is empty. <a href="/shopping">Continue Shopping</a></div>
    <% } else { %>
      
        <!-- Order Summary -->
        <div class="row">
          <div class="col-md-12">
          <h4>Order Summary</h4>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% let total = 0; %>
              <% for (let item of cart) { %>
                <tr>
                  <td><%= item.productName %></td>
                  <td><img src="/images/<%= item.image %>" width="60" class="img-thumbnail"></td>
                  <td><%= item.quantity %></td>
                  <td>$<%= item.price.toFixed(2) %></td>
                  <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                </tr>
                <% total += item.price * item.quantity; %>
              <% } %>
            </tbody>
          </table>
          <h5>Total: $<%= total.toFixed(2) %></h5>
        </div>
      </div>

      <hr class="my-4">

      <!-- Shipping Address -->
      <div class="row mb-4">
        <div class="col-md-12">
          <h4>Shipping Address</h4>
          <div class="mb-3">
            <label for="addressInput" class="form-label">Address</label>
            <textarea id="addressInput" class="form-control" rows="3" placeholder="Enter your shipping address" required></textarea>
            <div class="form-text">This address will be saved with your order.</div>
          </div>
        </div>
      </div>

      <!-- Payment Options -->
      <div class="row">
        <div class="col-md-12">
          <h4>Payment Options</h4>
          
          <!-- PayPal Button -->
          <div class="mt-3">
            <h5>Pay with PayPal</h5>
            <div id="paypal-button-container"></div>
          </div>

          <!-- NETS QR Button -->
          <div class="mt-4">
            <h5>Pay with NETS QR</h5>
            <form id="netsForm" action="/generateNETSQR" method="POST">
              <input type="hidden" name="cartTotal" value="<%= total.toFixed(2) %>">
              <input type="hidden" name="address" id="netsAddress">
              <button type="submit" class="btn btn-primary btn-lg">Pay with NETS QR</button>
            </form>
          </div>

          <div class="mt-4">
            <a href="/cart" class="btn btn-secondary">Back to Cart</a>
          </div>
        </div>
      </div>

      <!-- PayPal Integration Script -->
      <script>
        const cart = <%- JSON.stringify(cart.map(item => item.productId)) %>;
        const totalAmount = '<%= total.toFixed(2) %>';
        const addressInput = document.getElementById('addressInput');

        function renderPaypalButtons() {
          paypal.Buttons({
            createOrder: function (data, actions) {
              return fetch('/api/paypal/create-order', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify({ amount: totalAmount })
              })
                .then(res => res.json())
                .then(data => {
                  if (data.success && data.orderId) {
                    return data.orderId;
                  } else {
                    throw new Error('Failed to create order');
                  }
                });
            },
            onApprove: function (data, actions) {
              return fetch('/api/paypal/pay', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 
                  orderId: data.orderID,
                  cartItemIds: cart,
                  address: addressInput.value.trim()
                })
              })
                .then(res => res.json())
                .then(details => {
                  if (details.success) {
                    window.location.href = "/thankyou?orderId=" + details.orderId;
                  } else {
                    alert('Payment not completed: ' + (details.error || 'Unknown error'));
                  }
                })
                .catch(err => {
                  console.error('Payment error:', err);
                  alert('Payment processing failed. Please try again.');
                });
            },
            onClick: function (data, actions) {
              if (!cart.length) {
                alert('Your cart is empty. Please add items to cart before paying.');
                return actions.reject();
              }

              const address = addressInput.value.trim();
              if (!address) {
                alert('Please enter a shipping address.');
                addressInput.focus();
                return actions.reject();
              }

              return actions.resolve();
            },
            onError: function (err) {
              console.error('PayPal error:', err);
              alert('An error occurred with PayPal. Please try again.');
            }
          }).render('#paypal-button-container');
        }

        const netsForm = document.getElementById('netsForm');
        netsForm.addEventListener('submit', function (e) {
          const address = addressInput.value.trim();
          if (!address) {
            e.preventDefault();
            alert('Please enter a shipping address.');
            addressInput.focus();
            return false;
          }
          document.getElementById('netsAddress').value = address;
        });

        if (cart.length) {
          renderPaypalButtons();
        } else {
          document.getElementById('paypal-button-container').style.display = 'none';
        }
      </script>
    <% } %>
  </div>
</body>
</html>
